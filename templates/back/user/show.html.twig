{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container mt-3 mb-3">

    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ user.status ? 'abonné' : 'non-abonné' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_user_index') }}" class="btn btn-success">back to list</a>

    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="btn btn-success">edit</a>

    {{ include('back/user/_delete_form.html.twig') }}
</div>
{% endblock %}
